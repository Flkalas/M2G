{
	"manifest_version": 2,
	"name": "Twitter Video Assist",
	"description": "For your better Twitter video experience.",
	"version": "1.3.8.8",
	
	"permissions": [
		"tabs",
		"storage",
		"activeTab",
		"cookies",
		"downloads",
		"contextMenus",
		"webRequest",
		"webRequestBlocking",
		"https://*/*",
		"http://*/*"
	],
	"icons": {
		"16": "icon-bitty.png",
		"48": "icon-small.png",
		"128": "icon-large.png"
	},
	"content_scripts": [
		{		
			"matches": [ "<all_urls>"],			
			"css":["style.css"],
			"js":["jquery-2.1.4.min.js","progressPopup.js"]
			
		}
	],
	"web_accessible_resources": [
		"loading.svg",
		"loading.css"
	],
	"background": {
		"scripts": ["main.js"]
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"incognito": "split"
}