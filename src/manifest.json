{
	"manifest_version": 2,
	"name": "MP4 to GIF for Twitter",
	"description": "This extension convert and save MP4 video to GIF animated picture for Twitter.",	
	"version": "1.2.3",
	
	"permissions": [
		"tabs",
		"contextMenus",
		"activeTab",
		"<all_urls>",
		"downloads",
		"storage"
	],
	"icons": {
		"16": "icon-bitty.png",
		"48": "icon-small.png",
		"128": "icon-large.png"
	},
	"content_scripts": [
		{		
			"matches": [ "<all_urls>"],			
			"css":["style.css"],
			"js":["jquery-2.1.4.min.js","progressPopup.js"]
			
		}
	],
	"web_accessible_resources": [
		"loading.svg",
		"loading.css"
	],
	"background": {
		"scripts": ["main.js"]
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	}
}